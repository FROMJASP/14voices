{
  "schema": "1",
  "services": {
    "app": {
      "image": "14voices-app",
      "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
      },
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "HOSTNAME": "0.0.0.0"
      },
      "ports": ["3000"],
      "depends_on": ["postgres", "minio"]
    }
  },
  "volumes": {
    "uploads": {
      "driver": "local"
    }
  }
}
